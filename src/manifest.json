{
  "name": "Custom Homepage",
  "version": "1.0",
  "manifest_version": 3,
  "description": "A custom landing page instead of the default new tab.",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "https://*/*",
    "http://*/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.css", "*.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "assets/images/favicon.ico",
    "48": "assets/images/favicon.ico",
    "128": "assets/images/favicon.ico"
  }
}
